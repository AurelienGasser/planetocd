<h1><%= t :Articles%></h2>

<section>
    <% Rails.application.articles[params[:locale]].each do |key, article| %>
        <article class="article-excerpt">
            <a href="<%= article_url(article.id) %>">
                <h2><%= article.title %></h2>
            </a>
            <div><%= article.html_content_short %></div>
        </article>
    <% end %>
</section>

